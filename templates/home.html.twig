{% extends "layout.html.twig" %}

{% block header %}
    <header>
    <h1>The league</h1>
        <menu>
            <li>
                <a href="">Les teams</a>
            </li>
            <li>
                <a href="">Les players</a>
            </li>
            <li>
                <a href="">Les matchs</a>
            </li>
        </menu>
        <h2>Tout sur la league</h2>
        <p>Les players, les teams et l'actu des matchs</p>
    </header>
{% endblock %}

{% block main %}
    <main>
        {% for team in teams %}
            {% if loop.first %}
                <section class="featured">
                    <h2 class="logo-team">{{ team.name }}</h2>
                    <img src='{{ team.logo.getUrl() }}' alt='{{ team.logo.getAlt() }}' />
                        <section class="players">
                            <h3>Les players</h3>
                            {% for player in players %}
                                {% if player.team.id == 1 %}
                                    <article>
                                        <img src='{{ player.portrait.getUrl() }}' alt='{{ player.portrait.getAlt() }}' />
                                        <h2>{{ player.nickname }}</h2>
                                    </article>
                                {% endif %}
                            {% endfor %}
                        </section>
                </section>
            {% endif %}
        {% endfor %}
    </main>
{% endblock %}
